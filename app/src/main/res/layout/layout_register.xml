                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="User" />


                    <CheckBox
                        android:id="@+id/cbWorker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:padding="5dp"
                        android:text="Worker" />

                </LinearLayout>

                <LinearLayout
