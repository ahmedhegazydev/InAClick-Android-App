<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@null"
android:layout_marginBottom="10dp"
    app:cardElevation="10dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"


    >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Available user"
              android:gravity="center"
              android:background="@color/md_indigo_200"
              android:textColor="#FFFFFF"


              />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


              <ImageView
                  android:layout_width="90dp"
                  android:layout_height="90dp"
                  android:id="@+id/ivCustomer"
                  android:scaleType="centerInside"
                  android:src="@drawable/user"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/ivCustomer"
                  android:textSize="20sp"
                  android:id="@+id/tvUserName"
                  android:textStyle="bold"
                  android:text="Ahmed Mohammed"
                  android:padding="5dp"
                  android:layout_centerVertical="false"

                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/ivCustomer"
                  android:textSize="17sp"
                  android:padding="5dp"
                  android:id="@+id/tvUserPhoneNumber"
                  android:layout_below="@id/tvUserName"
                  android:text="01156749640"
                  android:layout_centerVertical="false"
                  />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="@color/md_grey_400"
                  android:layout_below="@id/tvUserPhoneNumber"
                  android:layout_toRightOf="@id/ivCustomer"
                  android:id="@+id/wall"
                  />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_toRightOf="@id/ivCustomer"
                  android:layout_below="@id/wall"
                  android:gravity="center_vertical"
                  >
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Destination : "
                      android:gravity="center_vertical"
                      android:padding="5dp"
                      android:textStyle="bold"
                      android:textSize="20sp"

                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text="El-Haram"
                      android:layout_weight="1"
                      android:gravity="center_vertical"
                      android:id="@+id/tvUserDestName"

                      />
              </LinearLayout>

          </RelativeLayout>
      </LinearLayout>


</android.support.v7.widget.CardView>