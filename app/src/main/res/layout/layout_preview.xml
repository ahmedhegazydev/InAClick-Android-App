<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardElevation="30dp"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="رخصة القياده"
                android:textSize="20sp"

                />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivDoc1Preview"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="5dp"
                android:background="@color/md_grey_200"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="29dp" />
            <!---->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="الفيش الحنائي"
                android:textSize="20sp"

                />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivDoc2Preview"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="5dp"
                android:background="@color/md_grey_200"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="29dp" />
            <!---->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="رخصة السياره : ظهر الرخصه"
                android:textSize="20sp"

                />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivDoc3Preview"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="5dp"
                android:background="@color/md_grey_200"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="29dp" />
            <!---->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="رخصة السياره : وش الرخصه"
                android:textSize="20sp"

                />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivDoc4Preview"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="5dp"
                android:background="@color/md_grey_200"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="29dp" />
            <!---->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnUploadNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_selector"
                    android:text="Upload .."
                    android:textColor="@color/md_blue_grey_50"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_selector"
                    android:text="Cancel"
                    android:textColor="@color/md_blue_grey_50"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</android.support.v7.widget.CardView>