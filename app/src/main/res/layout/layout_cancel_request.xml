<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardElevation="20dp"


    >


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:gravity="center"
          >

          <ImageView
              android:id="@+id/ivClose"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_below="@id/slideViewCancelRequest"
              android:layout_alignParentBottom="false"
              android:layout_centerHorizontal="true"
              android:layout_alignParentRight="false"
              android:layout_margin="10dp"

              android:src="@drawable/close3"


              />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tvStr"
              android:padding="10dp"
              android:text="@string/cancelReq"
              android:textColor="@android:color/darker_gray"
              android:textSize="20sp"
              android:textStyle="bold"
              android:textAllCaps="false"



              />

          <Button
              android:id="@+id/btnCancelRequest"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="false"
              android:layout_alignParentRight="false"
              android:layout_centerInParent="true"
              android:layout_centerVertical="false"
              android:layout_alignParentBottom="false"
              android:background="@drawable/button_selector"
              android:text="Cancel Request"
              android:layout_below="@id/tvStr"
              android:textColor="#FFFFFF"
              android:textSize="15sp"
              android:layout_margin="10dp"
              android:visibility="gone"
              />
          <ng.max.slideview.SlideView
              android:id="@+id/slideViewCancelRequest"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="false"
              android:layout_alignParentRight="false"
              android:layout_centerInParent="false"
              android:layout_centerVertical="false"
              android:layout_alignParentBottom="false"
              android:layout_below="@id/tvStr"
              android:textColor="#FFFFFF"
              android:textSize="15sp"
              android:layout_margin="10dp"
              app:sv_buttonBackgroundColor="#fff"
              app:sv_buttonImage="@drawable/ic_chevron_double_right_pink"
              app:sv_slideBackgroundColor="@color/colorAccent"
              app:sv_slideText="Slide To Cancel Request"
              app:sv_slideTextColor="#FFFFFF" />
          <ProgressBar
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:indeterminate="true"
              android:layout_marginRight="50dp"
              android:layout_marginLeft="50dp"
              android:layout_below="@id/slideViewCancelRequest"

              />
      </RelativeLayout>

</android.support.v7.widget.CardView>